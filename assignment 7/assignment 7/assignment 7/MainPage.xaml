<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_7.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#3030AB" Padding="24" CornerRadius="0">
            <Label Text="Facebook" HorizontalTextAlignment="Start" TextColor="White" FontSize="36"/>
        </Frame>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <BoxView Color="blue" />
            <Button Text="Home" Clicked="Button_Clicked"
                    BackgroundColor="Blue"
                    TextColor="white"
               HorizontalOptions="Center"
               VerticalOptions="Center" FontSize="Small" />

            <BoxView Grid.Column="1"
                 Color="Blue" />
            <Button Grid.Column="1"
                    BackgroundColor="Blue"
                    TextColor="White"
               Text="Groups" Clicked="Button_Clicked_2"
               HorizontalOptions="Center"
               VerticalOptions="Center" FontSize="Small" />
            <BoxView Grid.Column="2"
                 Color="Blue" />
            <Button Grid.Column="2"
                    BackgroundColor="Blue"
                    TextColor="White"
               Text="Watch" Clicked="Button_Clicked_3"
               HorizontalOptions="Center"
               VerticalOptions="Center" FontSize="Small" />
            <BoxView Grid.Column="3"
                 Color="Blue" />
            <Button Grid.Column="3"
                    BackgroundColor="Blue"
                    TextColor="white"
               Text="Notifications" Clicked="Button_Clicked_4"
               HorizontalOptions="Center"
               VerticalOptions="Center" FontSize="Small" />
            <BoxView Grid.Column="4"
                 Color="Blue" />
            <Button Grid.Column="4"
                    BackgroundColor="Blue"
                    TextColor="White"
               Text="Menu" Clicked="Button_Clicked_5"
               HorizontalOptions="Center"
               VerticalOptions="Center" FontSize="Small" />
            
           
        </Grid>

        <StackLayout>
           
                <Button 
                    BackgroundColor="White"
                    TextColor="Black"
               Text="What's on your mind?" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button  Padding="0" Grid.Column="0"
                    BackgroundColor="Blue"
                    TextColor="White"
               Text="Live" Clicked="Button_Clicked"
               HorizontalOptions="StartAndExpand" WidthRequest="200"
               FontSize="Small" />
                <Button  Padding="0" Margin="0" Grid.Column="1"
                    BackgroundColor="Blue"
                    TextColor="white"
               Text="Photo" WidthRequest="200" Clicked="Button_Clicked"
               HorizontalOptions="StartAndExpand"
                FontSize="Small" />
            <Button Grid.Column="2"
                    BackgroundColor="Blue"
                    TextColor="white" WidthRequest="200"
               Text="Room" Clicked="Button_Clicked"
               HorizontalOptions="Center"
                FontSize="Small" />
            </Grid>
        </StackLayout>
          </StackLayout>


</ContentPage>
